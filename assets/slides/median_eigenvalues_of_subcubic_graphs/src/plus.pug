    script.
      (function() {
        var progressBar = null;
        var progressPercent = null;
        var animationId = null;
        var startTime = null;
        var isAnimating = false;
        
        function animateProgress() {
          if (!progressBar || !progressPercent || !isAnimating) return;
          
          var elapsed = Date.now() - startTime;
          var value;
          
          if (elapsed < 1000) {
            // First phase: 0% to 99% in 1 second
            value = (elapsed / 1000) * 99;
          } else if (elapsed < 100000) {
            // Second phase: 99% to 100% in 99 seconds
            var phase2Elapsed = elapsed - 1000;
            value = 99 + (phase2Elapsed / 99000) * 1;
          } else {
            // Finished
            value = 100;
            progressBar.value = value;
            progressPercent.textContent = '100.00%';
            isAnimating = false;
            return;
          }
          
          progressBar.value = value;
          progressPercent.textContent = value.toFixed(2) + '%';
          
          if (isAnimating) {
            animationId = requestAnimationFrame(animateProgress);
          }
        }
        
        function startAnimation() {
          if (!progressBar || !progressPercent) return;
          
          // Reset
          progressBar.value = 0;
          progressPercent.textContent = '0.00%';
          startTime = Date.now();
          isAnimating = true;
          
          // Cancel any existing animation
          if (animationId) {
            cancelAnimationFrame(animationId);
          }
          
          // Start animation
          animationId = requestAnimationFrame(animateProgress);
        }
        
        function stopAnimation() {
          isAnimating = false;
          if (animationId) {
            cancelAnimationFrame(animationId);
            animationId = null;
          }
        }
        
        function checkAndStart() {
          var slide = document.querySelector('section[data-progress-slide].present, section.present section[data-progress-slide].present');
          if (slide) {
            progressBar = document.getElementById('progress-bar');
            progressPercent = document.getElementById('progress-percent');
            if (progressBar && progressPercent) {
              startAnimation();
            }
          }
        }
        
        function handleSlideChanged(event) {
          // Check if the current slide has the progress bar
          var currentSlide = event.currentSlide;
          if (currentSlide && (currentSlide.hasAttribute('data-progress-slide') || currentSlide.querySelector('#progress-bar'))) {
            progressBar = document.getElementById('progress-bar');
            progressPercent = document.getElementById('progress-percent');
            if (progressBar && progressPercent) {
              startAnimation();
            }
          } else {
            // Stop animation if leaving the slide
            stopAnimation();
          }
        }
        
        function init() {
          // Wait for Reveal.js to be ready
          if (window.Reveal) {
            Reveal.addEventListener('slidechanged', handleSlideChanged);
            Reveal.addEventListener('ready', function() {
              setTimeout(checkAndStart, 100);
            });
            // Check immediately in case slide is already visible
            setTimeout(checkAndStart, 200);
          } else {
            // If Reveal.js not ready, wait and try again
            setTimeout(init, 100);
          }
        }
        
        // Initialize when DOM is ready
        if (document.readyState === 'loading') {
          document.addEventListener('DOMContentLoaded', init);
        } else {
          init();
        }
      })();
